<Window x:Class="Задание_2.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Задание_2"
        mc:Ignorable="d"
        Title="Notification System" Height="500" Width="800">
    
    <Window.Background>
        <LinearGradientBrush StartPoint="0,0" EndPoint="1,1">
            <GradientStop Color="LightCoral" Offset="0" />
            <GradientStop Color="White" Offset="1" />
        </LinearGradientBrush>
    </Window.Background>

    <Grid>
        <StackPanel Margin="20" HorizontalAlignment="Center">
            <TextBlock Text="Система уведомлений" FontWeight="Bold" FontSize="18" Margin="0,0,0,20" HorizontalAlignment="Center"/>

            <TextBlock Text="Отправить сообщение:" FontWeight="Bold" HorizontalAlignment="Center"/>
            <TextBox x:Name="MessageTextBox" Width="300" Margin="0,5,0,10" HorizontalAlignment="Center"/>
            <Button Content="Отправить сообщение" Width="200" Click="SendMessageButton_Click" Margin="0,0,0,20" HorizontalAlignment="Center"/>

            <TextBlock Text="Совершить звонок:" FontWeight="Bold" HorizontalAlignment="Center"/>
            <TextBox x:Name="CallTextBox" Width="300" Margin="0,5,0,10" HorizontalAlignment="Center"/>
            <Button Content="Совершить звонок" Width="200" Click="MakeCallButton_Click" Margin="0,0,0,20" HorizontalAlignment="Center"/>

            <TextBlock Text="Отправить электронное письмо:" FontWeight="Bold" HorizontalAlignment="Center"/>
            <TextBox x:Name="EmailTextBox" Width="300" Margin="0,5,0,10" HorizontalAlignment="Center"/>
            <Button Content="Отправить письмо" Width="200" Click="SendEmailButton_Click" Margin="0,0,0,20" HorizontalAlignment="Center"/>

            <TextBlock x:Name="NotificationLogTextBlock" FontSize="14" FontWeight="Bold" Margin="0,20,0,0" HorizontalAlignment="Center"/>
        </StackPanel>
    </Grid>
</Window>
